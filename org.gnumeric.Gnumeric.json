{
    "id": "org.gnumeric.Gnumeric",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "gnumeric",
    "rename-icon": "gnumeric",
    "copy-icon": true,
    "rename-desktop-file": "gnumeric.desktop",
    "rename-appdata-file": "gnumeric.appdata.xml",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=xdg-documents",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=xdg-run/gvfsd"
    ],
    "modules": [
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name" : "gsf",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup" : [
                "/include",
                "/lib/pkgconfig",
                "/share/man",
                "/share/gtk-doc/html/gsf",
                "/share/thumbnailers",
                "/bin/gsf*",
                "*.la"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/libgsf/1.14/libgsf-1.14.50.tar.xz",
                    "sha256": "6e6c20d0778339069d583c0d63759d297e817ea10d0d897ebbe965f16e2e8e52",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libgsf",
                        "versions": {
                            "<": "1.15"
                        },
                        "stable-only": true
                    }
                }
            ]
        },
        {
            "name" : "goffice",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup" : [
                "/include",
                "/share/gtk-doc",
                "/lib/pkgconfig",
                "*.la"
            ],
            "sources" : [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/goffice/0.10/goffice-0.10.55.tar.xz",
                    "sha256": "16a221191855a6a6c0d06b1ef8e481cf3f52041a654ec96d35817045ba1a99af",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "goffice",
                        "versions": {
                            "<": "0.11"
                        },
                        "stable-only": true
                    }
                }
            ]
        },
        {
            "name" : "psiconv",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup" : [
                "/include",
                "/share/man",
                "/share/psiconv",
                "/bin/psiconv*",
                "*.la"
            ],
            "build-options": {
                "cflags": "-fcommon"
            },
            "sources" : [
                {
                    "type": "archive",
                    "url": "http://www.frodo.looijaard.name/system/files/software/psiconv/psiconv-0.9.9.tar.gz",
                    "sha256": "6d51fe79b502a1e277bea275a574ae2db5b1b9d7daef703a8fa3635ae02a8bb0"
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "pxlib",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup": [
                "/include",
                "*.la"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.sourceforge.net/project/pxlib/pxlib/0.6.8/pxlib-0.6.8.tar.gz",
                    "sha256": "5f9b58a5c3d9e5e60faad16dfbc5172ee14ae57a978732378660c0f2c9e74ef9"
                }
            ]
        },
        {
            "name": "gnumeric",
            "buildsystem": "autotools",
            "cleanup": [
                "/include"
            ],
            "post-install": [
                "appstream-util modify $FLATPAK_DEST/share/metainfo/gnumeric.appdata.xml id $FLATPAK_ID"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnumeric/1.12/gnumeric-1.12.55.tar.xz",
                    "sha256": "c69a09cd190b622acca476bbc3d4c03d68d7ccf59bba61bf036ce60885f9fb65",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnumeric",
                        "stable-only": true
                    }
                },
                {
                    "type": "patch",
                    "paths": [
                        "patches/appdata.patch",
                        "patches/tooltip-fix.patch"
                    ]
                }
            ]
        }
    ]
}
